<div class="center hero-unit">
  <h2>Which Human Will Win?</h2>
  <h3>You are player <%=@player%></h3><br />
  <h3 id="player_notification"><%=@notification%></h3>

  <div id="box_center" class="btn-group btn-group-vertical">
	<% @representation.keys.each_slice(3) do |moves| %>
	<div id="button" class="btn-group">
		<% moves.each do |move| %>
		<%= link_to @representation[move], 
		          two_player_move_path(move: move, cipher: params[:cipher]), 
			      class: "btn btn-large move_button update", id: "player_move#{move}",
				  remote: true %>
		<% end %>
    </div>
	<% end %>
  </div>

  <%= link_to "New Game", reset_two_player_game_path(cipher: params[:cipher]), 
                          class: "btn btn-success update", id: "new_game",
	                      remote: true %>

	<% if ( "X" == @player ) %>

	<br /><br />
	
	<div class="btn-group btn">
	  <a class="dropdown-toggle btn-large" data-toggle="dropdown" href="#">
	    Invite Another Member to Play!
	    <span class="caret"></span>
	  </a>
	  <ul class="dropdown-menu">
	    <%= render @players %>
	  </ul>
	</div>
		
	<% end %>

</div>

<script type="text/javascript">
	<%= "cipher = #{params[:cipher]}" %>
</script>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

